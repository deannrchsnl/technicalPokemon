<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:id="@+id/toolbar"
        android:paddingHorizontal="16dp"
        android:background="@color/main">
        <ImageView
            android:layout_width="24dp"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/title"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:id="@+id/ivBack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bulbasaur"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/title"
            android:textColor="@color/white"
            app:layout_constraintLeft_toRightOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_width="24dp"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/title"
            android:layout_height="24dp"
            android:src="@drawable/ic_unfavorite"
            android:id="@+id/ivFav"
            app:layout_constraintRight_toRightOf="parent"
            app:tint="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/main"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="90dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/tvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#0001"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="22dp"
                app:layout_constraintBottom_toTopOf="@id/cvType1"
                android:layout_marginBottom="8dp"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvType1"
                android:layout_width="wrap_content"
                app:cardCornerRadius="11dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/lvType1"
                    android:background="@color/steel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivTypes1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/type_steel"/>
                <TextView
                    android:id="@+id/tvType1"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginRight="12dp"
                    android:layout_height="wrap_content"
                    android:text="Steel"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvType2"
                android:layout_width="wrap_content"
                app:cardCornerRadius="11dp"
                app:layout_constraintLeft_toRightOf="@id/cvType1"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/lvType2"
                    android:background="@color/steel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/ivTypes2"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/type_steel"/>
                    <TextView
                        android:id="@+id/tvType2"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginRight="12dp"
                        android:layout_height="wrap_content"
                        android:text="Steel"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="40dp"
                app:layout_constraintTop_toBottomOf="@id/ivAvatar">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:paddingTop="20dp"
                    android:paddingBottom="40dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="16dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/lyIndicatorAbout"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tvIndicatorAbout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="About"
                                android:textColor="@color/main"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/viewIndicatorAbout"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/main" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lyIndicatorStats"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tvIndicatorStats"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="Base Stats"
                                android:textColor="@color/lightgrey"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/viewIndicatorStats"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/main"
                                android:visibility="gone"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lyIndicatorEvolution"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tvIndicatorEvolution"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="Evolution"
                                android:textColor="@color/lightgrey"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/viewIndicatorEvolution"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="8dp"
                                android:visibility="gone"
                                android:background="@color/main" />
                        </LinearLayout>
                    </LinearLayout>

                    <include
                        android:id="@+id/lyAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/fragment_about"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_stats"
                        android:id="@+id/rvStats"/>
                    <include
                        android:id="@+id/lyEvol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/fragment_evolution"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/white"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>